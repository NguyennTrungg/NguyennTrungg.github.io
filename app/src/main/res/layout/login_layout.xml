<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9fffb8">

    <ImageView
        android:id="@+id/image"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:background="@drawable/catzz"/>

    <TextView
        android:id="@+id/text"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="hi human!!"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_below="@+id/text"
        android:id="@+id/text1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Do you want to Sign In, Sign Up to have me...?"
        android:textSize="20dp"/>

    <TextView
        android:layout_below="@+id/text1"
        android:id="@+id/SignIn_btn"
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:textSize="23dp"
        android:gravity="center"
        android:text="Sign In"
        android:textColor="#D3FFFFFF"
        android:drawableRight="@drawable/iconcat"
        android:paddingHorizontal="15dp"
        android:background="@drawable/custom_btn"/>

    <TextView
        android:layout_below="@+id/SignIn_btn"
        android:id="@+id/SignUp_btn"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:textSize="23dp"
        android:text="Sign Up"
        android:drawableLeft="@drawable/dog"
        android:paddingHorizontal="15dp"
        android:textColor="#D3FFFFFF"
        android:gravity="center"
        android:background="@drawable/custom_btn2" />


</RelativeLayout>